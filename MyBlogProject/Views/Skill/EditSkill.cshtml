@using MyBlogDomain.Entities
@model Skill
@{
    ViewData["Title"] = "EditSkill";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Edit Skill</h1>
<form class="form-control" method="post">
    <input asp-for="Id" hidden/>
    <label asp-for="SkillName">Skill Name</label>
    <input type="text" asp-for="SkillName" class="form-control" value="@Model.SkillName"/>
    <label asp-for="Level"></label>
    <input asp-for="Level" type="text" class="form-control" value="@Model.Level"/>
    <button type="submit" class="form-control"> Edit</button>
</form>

